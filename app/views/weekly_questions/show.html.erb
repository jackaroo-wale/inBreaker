<h1><%= @weekly_question.content %></h1>

<%= form_with url: create_answer_weekly_question_path(@weekly_question, team_id: @team.id), method: :post, local: true do |form| %>
  <% @answers.each do |answer| %>
    <div>
      <%= form.radio_button :user_answer, answer %>
      <%= form.label :user_answer, answer %>
    </div>
  <% end %>
  <div>
    <%= form.hidden_field :weekly_answer_id, value: @weekly_answer.id %>
    <%= form.submit "Submit Answer" %>
  </div>
<% end %>
