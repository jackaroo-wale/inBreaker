<%= form_with(model: @weekly_question, local: true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="field">
    <%= form.label :correct_answer %>
    <%= form.text_field :correct_answer %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
