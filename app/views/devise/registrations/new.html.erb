<div class="signup-container">
  <div class="signup-form">
    <h2>Sign up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, label: "Email", required: true, autofocus: true, input_html: { autocomplete: "email", class: "input-field" } %>
        <%= f.input :username, label: "Username", required: true, input_html: { autocomplete: "username", class: "input-field" } %>
        <%= f.input :description, label: "Description", required: false, input_html: { autocomplete: "description", class: "input-field" } %>
        <%= f.input :password, label: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", class: "input-field" } %>
        <%= f.input :password_confirmation, label: "Confirm Password", required: true, input_html: { autocomplete: "new-password", class: "input-field" } %>
        <%= f.file_field :profile_image, as: :file,  label: "Profile Image" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "signup-button" %>
      </div>
    <% end %>
  </div>

  <div class="signup-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
