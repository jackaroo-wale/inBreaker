<h1>Conversation with <%= @conversation.receiver.username %></h1>
<div class="messages">
  <% @conversation.private_messages.each do |message| %>
    <p><strong><%= message.user.username %>:</strong> <%= message.content %></p>
  <% end %>
</div>

<%= simple_form_for [@conversation, @private_message] do |f| %>
  <%= f.input :content, label: false, placeholder: "Enter your message" %>
  <%= f.submit "Send" %>
<% end %>
