<div class="create-container">
  <p class="create-title">Make a new team and invite your friends!</p>
  <div class="users-card">
    <%= simple_form_for([@user, @member, @team]) do |f| %>
      <%= hidden_field_tag :user_id, current_user.id %>
      <div class="field">
        <%= f.input :name, label: false, placeholder: "Team Name", class: "form-control" %>
        <%= f.file_field :team_image, as: :file,  label: "Team Image" %>
      </div>
      <div class="create-text">
        <p>Add Members</p>
      </div>
      <div data-controller="user-search">
        <%= f.text_field :query,
                         class: "form-control",
                         placeholder: "Search for users",
                         value: params[:query],
                         data: { user_search_target: "input", action: "input->user-search#perform" } %>
        <div class="create-text">
          <p>Results:</p>
        </div>
        <div data-user-search-target="results"></div>
        <div class="create-text">
          <p>Selected Members:</p>
        </div>
        <div data-user-search-target="selectedMembers"></div>
      </div>
      <div class="actions">
        <%= f.submit 'Create Team', class: "button-54", data: { action: "user-search#submit" } %>
      </div>
    <% end %>
  </div>
</div>
