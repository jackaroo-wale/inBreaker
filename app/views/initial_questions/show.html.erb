<div class="create-container">
  <h1>Questions</h1>
  <div data-controller="display-initial-questions">
    <div class="question">
      <p><%= @initial_question.content %></p>
      <%= simple_form_for [@initial_question, @initial_answer] do |f| %>
        <%= f.input :content, input_html: { class: 'form-control' } %>
        <%= f.submit "Send it through", class: 'submit-btn' %>
      <% end %>
    </div>
  </div>
</div>
